#include <iostream>

int main() {
    const char* arr0    = "Hello there I'm John";
    const char  arr1[22] = "Hello there I'm John\0";
    const char  arr2[]  = "Hello there I'm John";
    const char  arr3[10]  = {'h', 'e', 'l', 'l', 'o', '\0', '\0', 'h', 'e'};
    const int   arr4[100]  = {1,2,3,4,5};

    for (size_t i{0}; i < 6; ++i) {std::cout << arr0[i] << ' ';} std::cout << '\n';
    for (size_t i{0}; i < 6; ++i) {std::cout << arr1[i] << ' ';} std::cout << '\n';
    for (size_t i{0}; i < 6; ++i) {std::cout << arr2[i] << ' ';} std::cout << '\n';

    std::cout << '\n';

    std::cout << sizeof(*arr0) << '\n';
    std::cout << sizeof(*arr1) << '\n';
    std::cout << sizeof(*arr2) << '\n';
    std::cout << sizeof(*arr3) << '\n';
    std::cout << sizeof(arr4) << '\n';

    for (size_t i{0}; i < 100; ++i) {
        std::cout << arr4[i] << ' ';
    }

    
    return 0;
}
